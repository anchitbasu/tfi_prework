<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="intern.tfi.org.prework.CreateOppFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter The Appropriate Details In The Fields"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/opp_title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:hint="Title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/opp_city_edit_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:hint="City" />

            <EditText
                android:id="@+id/opp_area_edit_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:hint="Area"
                android:layout_toRightOf="@+id/opp_city_edit_text"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/opp_email_edit_text"
            android:hint="Email Id"
            android:layout_marginTop="15dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/volunteer_type_spinner"
            android:layout_marginTop="15dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/opp_start_date_edit_text"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="90dp"
                android:gravity="center_horizontal"
                android:hint="Start Date"
                android:inputType="date"/>

            <EditText
                android:id="@+id/opp_end_date_edit_text"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:hint="End Date"
                android:inputType="date"
                android:layout_toRightOf="@+id/opp_start_date_edit_text"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/opp_time_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:hint="Time Commitment Per Day(in hours)" />

        <Spinner
            android:id="@+id/opp_days_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/opp_description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:inputType="text"
            android:hint="Provide a brief description of the volunteering opportunity" />

        <Button
            android:id="@+id/opp_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Create Opportunity"/>

    </LinearLayout>

</FrameLayout>
